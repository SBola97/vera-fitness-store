<section class="section-{{ section.id }} color-{{ section.settings.color_scheme }} spaced-section--full-width">
  <div class="featured-items-container">
    {% if section.settings.title != blank %}
      <h2 class="section-title" style="text-align: {{ section.settings.title_alignment }};">{{ section.settings.title }}</h2>
    {% endif %}
    {% for block in section.blocks %}
      {% assign is_reverse = forloop.index | modulo: 2 %}
      {% assign product = all_products[block.settings.product] %}
      <div class="featured-item" {{ block.shopify_attributes }}>
        <div class="featured-grid {% if is_reverse == 0 %}featured-grid-reverse{% endif %}">
          <div class="featured-image-container">
            {% if product != blank %}
              <img
                src="{{ product.featured_image | image_url }}"
                alt="{{ product.featured_image.alt | default: product.title | escape }}"
                class="featured-image"
                width="800"
                height="800"
                loading="lazy"
              >
            {% else %}
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
          </div>
          <div class="featured-content">
            {% if block.settings.title == blank or block.settings.title == "Product name" or block.settings.title == "Nombre del producto" %}
              <h3 class="title">{{ product.title }}</h3>
            {% else %}
              <h3 class="title">{{ block.settings.title | escape }}</h3>
            {% endif %}
            <a href="{{ product.url }}" class="button">
              {{ block.settings.button_label | escape }}
            </a>  
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</section>

<style>
.featured-items-container {
  display: flex;
  flex-direction: column;
  gap: 0;
  margin: 0 auto;
  padding: 0 5rem;
  max-width: 1100px;
}

.featured-item {
  display: block;
  width: 100%;
  padding: 0 3rem;
}

.featured-grid {
  display: flex;
  flex-direction: row;
  min-height: 400px;
  align-items: center;
  gap: 1rem;
  margin: 0 auto;
}

.featured-grid-reverse {
  flex-direction: row-reverse;
}

.featured-image-container {
  flex: 0.7;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  max-width: 360px;
  height: 360px;
  overflow: hidden;
  transition: transform 0.3s ease;
}

.featured-image-container:hover {
  transform: scale(1.03);
}

.featured-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  padding: 1rem 2rem;
  text-align: left;
}

.featured-grid-reverse .featured-content {
  align-items: flex-start;
  text-align: left;
  padding: 1rem 2rem;
}

.featured-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
  border-radius: 3rem;
  background-color: #fff;
}

.title {
  font-size: 2.5rem;
  font-weight: bold;
  line-height: 1.1;
  margin-bottom: 2rem;
  max-width: 600px;
  text-align: left;
}

.section-title {
  font-size: 3.75rem;
  font-weight: bold;
  margin-bottom: 3.5rem;
}

.button {
  align-self: flex-start;
  margin-top: auto;
}

.button:hover{
  font-weight: bold;
}

@media screen and (max-width: 768px) {
  .featured-items-container {
    padding: 0 1rem;
  }

  .featured-grid,
  .featured-grid-reverse {
    flex-direction: column;
    min-height: auto;
    gap: 0;
    margin: 0;
  }

  .featured-image-container {
    height: 300px;
    max-width: none;
    width: 100%;
    padding: 0.5rem;
    aspect-ratio: 1 / 1;
  }

  .featured-content,
  .featured-grid-reverse .featured-content {
    padding: 2rem 1rem;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .title {
    font-size: 2rem;
    text-align: center;
    margin-bottom: 1.5rem;
  }

  .section-title {
    font-size: 2.75rem;
  }

  .button {
    align-self: center;
    margin-top: 1rem;
  }
}
</style>

{% schema %}
{
  "name": "Featured Top Products",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Productos destacados"
    },
    {
      "type": "select",
      "id": "title_alignment",
      "label": "Title Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-3"
    }
  ],
  "blocks": [
    {
      "type": "featured_item",
      "name": "Featured Item",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title (optional)",
          "default": "Product name",
          "info": "Leave as 'Product name' to use product's title"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label",
          "default": "Comprar"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Top Products",
      "blocks": [
        {
          "type": "featured_item"
        },
        {
          "type": "featured_item"
        }
      ]
    }
  ]
}
{% endschema %} 