<section class="full-width-split-banner color-{{ section.settings.color_scheme }}">
  <div class="full-width-split-banner__inner">
    {% if section.settings.image_position == "left" %}
      <div class="full-width-split-banner__media">
        {% if section.settings.image != blank %}
          <img
            width="400"
            height="400"
            src="{{ section.settings.image | image_url: width: 2000 }}"
            alt="{{ section.settings.image.alt | escape }}"
            class="full-width-split-banner__img"
            loading="lazy"
          >
        {% else %}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}
      </div>
    {% endif %}

    <div class="full-width-split-banner__content">
      {% if section.settings.heading != blank %}
        <h2 class="full-width-split-banner__heading">{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.text != blank %}
        <p class="full-width-split-banner__text">{{ section.settings.text }}</p>
      {% endif %}
    </div>

    {% if section.settings.image_position == "right" %}
      <div class="full-width-split-banner__media">
        {% if section.settings.image != blank %}
          <img
            width="400"
            height="400"
            src="{{ section.settings.image | image_url: width: 2000 }}"
            alt="{{ section.settings.image.alt | escape }}"
            class="full-width-split-banner__img"
            loading="lazy"
          >
        {% else %}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}
      </div>
    {% endif %}
  </div>
</section>

<style>
.full-width-split-banner {
  width: 100%;
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.full-width-split-banner__inner {
  display: flex;
  flex-direction: row;
  width: 100%;
  min-height: 420px;
  max-height: 600px;
  margin: 2rem 0;
}

.full-width-split-banner__media {
  flex: 1;
  overflow: hidden;
}

.full-width-split-banner__img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center; /* ensures the focal point is centered */
  display: block;
  transition: transform 0.4s ease-in-out;
}

/* Gentle zoom hover effect for extra polish */
.full-width-split-banner__media:hover .full-width-split-banner__img {
  transform: scale(1.02);
}

.full-width-split-banner__content {
  flex: 0.6;
  display: flex;
  flex-direction: column;
  padding: 3rem 4rem;
  color: white;
  background: rgba(0, 0, 0, 0.6); /* subtle dark background for contrast */
}

.full-width-split-banner__heading {
  font-size: 3.2rem;
  font-weight: bold;
  margin-bottom: 1rem;
}

.full-width-split-banner__text {
  font-size: 1.5rem;
  line-height: 1.6;
  margin-bottom: 1.2rem;
}

@media (min-width: 1440px) {
  .full-width-split-banner__text {
    font-size: 1.8rem;
    line-height: 1.8;
  }
}

@media (max-width: 1024px) {
  .full-width-split-banner__inner {
    min-height: 400px;
    height: auto;
  }
}

@media (max-width: 768px) {
  .full-width-split-banner__inner {
    flex-direction: column;
    height: auto;
  }

  .full-width-split-banner__media,
  .full-width-split-banner__content {
    width: 100%;
    flex: none;n
  }

  .full-width-split-banner__img {
    height: auto;
    max-height: 300px;
  }

  .full-width-split-banner__content {
    padding: 2rem;
    text-align: center;
    align-items: center;
    backdrop-filter: none;
  }

  .full-width-split-banner__heading {
    font-size: 1.8rem;
  }

  .full-width-split-banner__text {
    font-size: 1rem;
  }
}
</style>

{% schema %}
{
  "name": "Full Width Split Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Banner image"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image position",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "right", "label": "Right" }
      ],
      "default": "right"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Nuestra historia, tu fuerza"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "Activa cuerpo y mente con nuestros productos dise√±ados para el rendimiento y la resistencia."
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-3"
    }
  ],
  "presets": [
    {
      "name": "Full Width Split Banner"
    }
  ]
}
{% endschema %}
